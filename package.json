{
  "name": "simple-banking-webapp",
  "version": "0.1.0",
  "author": "moriyuu",
  "license": "MIT",
  "scripts": {
    "dev": "yarn build:w & yarn serve:w",
    "build": "tsc",
    "build:w": "pm2 start 'tsc --watch' --name tsc",
    "serve": "pm2 start dist/app.js --name app",
    "serve:w": "pm2 start dist/app.js --name app --watch",
    "stop": "pm2 stop app & pm2 stop tsc",
    "delete": "pm2 delete app & pm2 delete tsc"
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "pm2": "^3.2.9",
    "typescript": "^3.3.3"
  }
}
